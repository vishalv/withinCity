@model IEnumerable<MvcMusicStore.Models.Album>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
        </th>
        <th>
            Title
        </th>
        <th>
            Artist
        </th>
        <th>
            Genre
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AlbumId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AlbumId })
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Artist.Name
            </td>
            <td>
                @item.Genre.Name
            </td>
        </tr>
    }
</table>
